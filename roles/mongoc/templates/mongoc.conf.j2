# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongoc.log

# Where and how to store data.
storage:
  dbPath: {{ mongo_root_dir }}/mongoc
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: /var/run/mongodb/mongoc.pid  # location of pidfile

# network interfaces
net:
  port: {{ config_port }}
#  bindIp: 127.0.0.1 comment to listen on all interfaces.

#security:

#operationProfiling:

replication:
  replSetName: {{ config_rep_set_name }}

sharding:
  clusterRole: configsvr

